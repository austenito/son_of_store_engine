
 <div class="thumbnail" id="<%= store.id %>">
  
  <div class="row-fluid">
    <div class="span6">
      <%= link_to image_tag(Product.top_selling_for_store(store).image_link, :width => '150'), 
      store_path(store) %>
    </div>
    <div class="span6">
      <h3><%= link_to store.name, store_path(store) %></h3>
      <h3><%= store.description %></h3>
    </div>
  </div>
</div>
