<h1>Featured Store</h1>
<br />
<div class="hero-unit">
  <div class="row-fluid"> 
    <div class="span7">
      <%= link_to image_tag(@top_selling.image_link, :height => '150'), 
      store_path(@random_store) %>
    </div>
    <h1><%= link_to @random_store.name, store_path(@random_store) %><h1>
    <h2><%= @random_store.description %><h2>
  </div>
</div>

<div class="page-header">
  <h1>Stores</h1>
</div>


<ul class="thumbnails">
  <% @stores.each_slice(2) do |items_for_row| %>
    <li class="span6">
      <%= render :partial => "store", :collection => items_for_row, :as => :store %>
    </li>
  <% end %>
</ul>